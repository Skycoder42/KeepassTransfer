{
	"id": "de.skycoder42.kptransfer",
	"branch": "master",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.12",
	"sdk": "org.kde.Sdk",
	"command": "kptransfer-client",
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--share=network"
	],
	"build-options": {
		"env": {
			"QMAKEPATH": "/app/lib",
			"QT_PLUGIN_PATH": "/app/lib/plugins:/app/qpmx/usr/lib/plugins"
		}
	},
	
	"depends": [
		"cryptopp"
	],

	"modules": [
		"../deploy/flatpak/flatdep-modules.json",
		{
			"name": "kptransfer",
			"buildsystem": "qmake",
			"build-options": {
				"env": {
					"QPMX_CACHE_DIR": "/app/.qpmx"
				},
				"build-args": [ "--share=network" ]
			},
			"config-opts": [
				"CONFIG+=no_quick",
				"CONFIG+=no_auto_lupdate",
				"CONFIG+=auto_lrelease",
				"CONFIG+=no_bundle_deploy",
				"CONFIG+=system_cryptopp",
				"DEFINES+=FLATPAK_BUILD"
			],
			"sources": [
				{
					"type": "dir",
					"path": ".."
				}
			],
			"cleanup": [
				"/.qpmx",
				"*_template.qm"
			]
		}
	]
}
